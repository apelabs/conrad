{
  "name": "@apelabs/roshi-ui",
  "version": "0.1.0",
  "author": "Ape Labs",
  "contributors": [
    "Albert Vallverdu <byverdu@gmail.com>",
    "Xavier Fuentes <me@xavierfuentes.com>"
  ],
  "private": true,
  "main": "build/index.js",
  "dependencies": {
    "emotion": "^9.2.6",
    "emotion-theming": "^9.2.6",
    "prop-types": "^15.6.2",
    "react": "^16.4.2",
    "react-dom": "^16.4.2",
    "react-emotion": "^9.2.6",
    "react-scripts": "1.1.4",
    "react-styleguidist": "^7.2.5",
    "rebass": "^2.0.0-10",
    "styled-components": "^3.4.4"
  },
  "scripts": {
    "build": "yarn build:stories && yarn build:docs && yarn build:app",
    "build:stories": "build-storybook -s public",
    "build:docs": "styleguidist build",
    "build:app": "rm -rf build && NODE_ENV=production babel src/ --out-dir build --copy-files --ignore __stories__,__tests__,spec.js,test.js,__snapshots__",
    "dev": "concurrently 'yarn dev:stories' 'yarn dev:docs' 'yarn build:app'",
    "dev:stories": "start-storybook -p 9009 -s public",
    "dev:docs": "styleguidist server",
    "eject": "react-scripts eject",
    "postinstall": "yarn build",
    "test": "react-scripts test --env=jsdom"
  },
  "devDependencies": {
    "@storybook/addon-actions": "^3.4.10",
    "@storybook/addon-links": "^3.4.10",
    "@storybook/addon-storyshots": "^3.4.10",
    "@storybook/addons": "^3.4.10",
    "@storybook/react": "^3.4.10",
    "babel-core": "^6.26.3",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-runtime": "^6.26.0",
    "concurrently": "^4.0.0",
    "enzyme": "^3.4.4",
    "enzyme-adapter-react-16": "^1.2.0",
    "react-test-renderer": "^16.4.2"
  }
}
