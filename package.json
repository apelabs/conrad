{
  "name": "roshi",
  "version": "0.0.0",
  "author": "Ape Labs",
  "contributors": [
    "Albert Vallverdu <byverdu@gmail.com>",
    "Xavier Fuentes <me@xavierfuentes.com>"
  ],
  "private": true,
  "scripts": {
    "precommit": "lint-staged",
    "dev": "concurrently 'yarn dev:backend' 'yarn dev:frontend'",
    "dev:backend": "concurrently 'cd packages/server; yarn dev'",
    "dev:frontend": "concurrently 'cd packages/ui; yarn dev' 'cd packages/site; yarn dev' 'cd packages/client-web; yarn dev'"
  },
  "lint-staged": {
    "*.js": [
      "prettier --write",
      "git add"
    ],
    "yarn.lock": [
      "git rm --cached"
    ]
  },
  "devDependencies": {
    "concurrently": "^4.0.0",
    "husky": "^0.14.3",
    "lerna": "^2.11.0",
    "lint-staged": "^7.2.0",
    "prettier": "^1.13.7"
  }
}
